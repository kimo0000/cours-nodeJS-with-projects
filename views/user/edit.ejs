    <link href="../css/bootstrap.min.css" rel="stylesheet" />

    <!-- theme mode styled -->
      <link rel="stylesheet" href="../css/theme.css">


    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet" />
