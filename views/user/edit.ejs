  <body>
    
    <%- include('../components/theme.ejs') %>


    <main class="d-flex flex-nowrap">
    
      <%- include('../components/sidebar.ejs', {currPage: "edit"}) %>


      <section class="w-100">
        <%- include('../components/navbar.ejs') %>
      
        <nav class="px-2 mt-4 d-flex flex-wrap justify-content-between" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= userId.firstName + " " + userId.lastName %></li>
          </ol>

          <p class="me-md-5"> <span class="fw-medium fs-6">Id :</span> <%= userId._id %></p>
        </nav>

        <form action="/edit/<%= userId._id %>?_method=PUT" method="post" class="mx-0 row gx-3 gy-4 mt-2">
          <div class="col-md-6">
            <label for="inputfirstName4" class="form-label">First Name:</label>
            <input
              name="firstName"
              placeholder="Your First Name..."
              type="text"
              class="form-control"
              id="inputfirstName4"
              value="<%= userId.firstName %>"
            />
          </div>
          <div class="col-md-6">
            <label for="inputlastName4" class="form-label">Last Name:</label>
            <input
              name="lastName"
              placeholder="Your Last Name..."
              type="text"
              class="form-control"
              id="inputlastName4"
              value="<%= userId.lastName %>"
            />
          </div>

          <div class="col-md-6">
            <label for="inputemail4" class="form-label">Email:</label>
            <input
              name="email"
              placeholder="Your Email"
              type="email"
              class="form-control"
              id="inputemail4"
              value="<%= userId.email %>"
            />
          </div>
          <div class="col-md-6">
            <label for="inputtele4" class="form-label">Telephone:</label>
            <input
              name="phoneNumber"
              placeholder="Your Phone Number"
              type="number"
              class="form-control"
              id="inputtele4"
              value="<%= userId.phoneNumber %>"
            />
          </div>

          <div>
            <div class="col-md-6">
              <label for="inputage4" class="form-label">Age:</label>
              <input
                name="age"
                placeholder="Your Age: ..."
                type="number"
                class="form-control"
                id="inputage4"
                value="<%= userId.age %>"
              />
            </div>
          </div>

          <div>
            <div class="col-md-6">
              <label for="inputCountry" class="form-label">Country:</label>
              <select id="inputCountry" class="form-select"
                name="country"
              >
                <option value="Choose Your Country" <%= !userId.country && "selected" %> >Please Choose Your Country</option>
