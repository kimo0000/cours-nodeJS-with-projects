<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="../img/ali.png" type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Search page</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet" />

    <!-- theme mode styled -->
      <link rel="stylesheet" href="..//css/theme.css">



    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />
  </head>

  <body>

    <%- include('../components/theme.ejs') %>

    <main class="d-flex flex-nowrap">
    
            <%- include('../components/sidebar.ejs', {currPage: "search"}) %>


      <section class="w-100">
        <%- include('../components/navbar.ejs') %>

        <% if (result.length > 0) { %>
          <table
            style="width: 99%"
            class="text-center mx-auto table mt-5 table-striped table-bordered"
          >
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Country</th>
  
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
                <% result.forEach((user, i) => { %>
                 <tr>
                  <th scope="row"><%= i+1 %></th>
                  <td><%= user.firstName + " " + user.lastName %></td>
                  <td><%= user.gender %></td>
                  <td><%= user.country %></td>
    
                  <td class="d-flex justify-content-center flex-wrap gap-2">
                    <a
                      data-bs-toggle="tooltip"
                      data-bs-title="View details"
                      data-bs-placement="top"
                      class="btn btn-primary btn-sm"
                      href="./view/<%= user._id %>"
                      ><i class="bi bi-eye"></i
                    ></a>
                    <a
                      data-bs-toggle="tooltip"
                      data-bs-title="Edit user"
                      data-bs-placement="top"
                      class="btn btn-primary btn-sm"
                      href="./edit/<%= user._id %>"
                    >
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form action="/delete/<%= user._id %>?_method=DELETE" method="post">
                    <button
                      type="submit"
                      data-bs-toggle="tooltip"
                      data-bs-title="Delete user"
                      data-bs-placement="top"
                      class="btn btn-danger btn-sm"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                  </td>
                </tr>
                <% }) %>
                
              </tbody>
          </table>
        <% } else { %>
          <h3 class="text-center" style="color: red; margin: 150px auto">No Customer Have This Character! Please Try a gain</h3>
         <% } %>

      </section>
    </main>


    <script src="../js/bootstrap.bundle.min.js"></script>
    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
